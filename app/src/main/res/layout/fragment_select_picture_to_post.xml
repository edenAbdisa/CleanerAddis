<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="controller.posting.SelectPictureToPostFragment">

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="203dp" android:id="@+id/guideline9"/>
    <Button
            android:text="Choose Video \n from Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_video_from_gallery"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline9"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_image_from_gallery"/>
    <Button
            android:text="Take video \n by camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_video_from_camera" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_image_from_camera"/>
    <Button
            android:text="Choose picture \n from Gallery"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:id="@+id/button_image_from_gallery"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline26"/>
    <Button
            android:text="Take picture \n by camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_image_from_camera"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline26"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="519dp"
            android:id="@+id/guideline26"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation_bottom_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"
            android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline26"
            app:layout_constraintVertical_bias="0.227"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>