<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.iyoa.cleanaddis.controller.account.AccountFragment">


    <View
            android:id="@+id/divider12"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteY="0dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider11" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.202"/>
    <ImageView
            app:srcCompat="@drawable/ic_account_circle_black_24dp"
            android:layout_width="95dp"
            android:layout_height="78dp" android:id="@+id/account_profile_imageview"
            app:layout_constraintEnd_toStartOf="@+id/divider11" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/divider12" android:contentDescription="TODO"/>
    <View
            android:id="@+id/divider11"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" tools:layout_editor_absoluteY="-16dp"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:text="@string/account_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/divider11" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/account_profile_imageview"
            android:textSize="24sp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="@+id/account_profile_imageview"/>
    <com.google.android.material.textfield.TextInputEditText
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/divider12" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/divider12" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
    />
    <com.google.android.material.textfield.TextInputEditText
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            app:layout_constraintStart_toEndOf="@+id/divider12" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/divider12"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="300dp" app:layout_constraintVertical_bias="1.0"/>
    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintTop_toBottomOf="@+id/divider10"
                                                       android:id="@+id/account_logout_button"
                                                       app:layout_constraintStart_toEndOf="@+id/divider12"
                                                       android:layout_marginLeft="8dp"
                                                       android:layout_marginStart="8dp" android:background="#FFB300"
                                                       android:text="Log out" android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>
