<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="com.iyoa.cleanaddis.controller.report.AddReportFragment">


    <View
            android:id="@+id/divider7"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/divider5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.248" android:layout_marginTop="4dp"/>
    <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/report_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addreport_from_textview"
            app:layout_constraintTop_toTopOf="@+id/addreport_fromemail"
            app:layout_constraintEnd_toStartOf="@+id/divider7"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/divider5" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/report_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addreport_to_textview"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/divider7"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/addreport_toemail"/>
    <TextView
            android:text="@string/report_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addreport_header_textview"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/divider7"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/addreport_header_edittext"/>
    <TextView
            android:text="@string/report_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addreport_category_textview"
            app:layout_constraintEnd_toStartOf="@+id/divider7"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/spinner"/>
    <TextView
            android:text="@string/report_summary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addreport_message_textview"
            app:layout_constraintEnd_toStartOf="@+id/divider7"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/editText4"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/addreport_fromemail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/divider5" app:layout_constraintStart_toEndOf="@+id/divider7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/addreport_toemail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addreport_fromemail" app:layout_constraintStart_toEndOf="@+id/divider7"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <com.google.android.material.textfield.TextInputEditText android:layout_height="wrap_content"
                                                             android:layout_width="0dp"
                                                             app:layout_constraintStart_toEndOf="@+id/divider7"
                                                             android:layout_marginLeft="8dp"
                                                             android:layout_marginStart="8dp"
                                                             app:layout_constraintEnd_toEndOf="parent"
                                                             android:layout_marginEnd="8dp"
                                                             android:layout_marginRight="8dp"
                                                             android:id="@+id/addreport_header_edittext"
                                                             app:layout_constraintHorizontal_bias="0.0"
                                                             android:layout_marginTop="8dp"
                                                             app:layout_constraintTop_toBottomOf="@+id/addreport_toemail">

    </com.google.android.material.textfield.TextInputEditText>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/spinner"
            app:layout_constraintStart_toEndOf="@+id/divider7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/addreport_header_edittext"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editText4" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/divider7" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintBottom_toTopOf="@+id/divider8"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner"/>
    <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="680dp"
            tools:layout_editor_absoluteX="0dp"/>
    <ImageButton
            android:src="@drawable/ic_send_black_24dp"
            android:layout_width="40dp"
            android:layout_height="27dp" android:id="@+id/addreport_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:background="#00009688" app:layout_constraintBottom_toTopOf="@+id/divider5"
            android:layout_marginBottom="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
