<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.iyoa.cleanaddis.controller.account.SigninFragment">


    <ImageView
            android:src="@mipmap/ic_trash_round"
            android:layout_width="118dp"
            android:layout_height="107dp" android:id="@+id/imageView6"
            tools:layout_editor_absoluteX="164dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/divider14"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/divider13"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/username_email_edittext" android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/username_or_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/divider13"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider14"/>
    <com.google.android.material.textfield.TextInputEditText android:layout_width="0dp"
                                                             android:layout_height="wrap_content"
                                                             android:id="@+id/password_edittext"
                                                             app:layout_constraintEnd_toEndOf="parent"
                                                             android:layout_marginEnd="8dp"
                                                             android:layout_marginRight="8dp"
                                                             app:layout_constraintStart_toEndOf="@+id/divider13"
                                                             android:layout_marginLeft="8dp"
                                                             android:layout_marginStart="8dp"
                                                             android:layout_marginTop="8dp"
                                                             app:layout_constraintTop_toBottomOf="@+id/username_email_edittext"/>
    <View
            android:id="@+id/divider14"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp"
            tools:layout_editor_absoluteX="-26dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <com.google.android.material.textfield.TextInputEditText android:layout_width="0dp"
                                                             android:layout_height="wrap_content"
                                                             android:id="@+id/username_email_edittext"
                                                             app:layout_constraintEnd_toEndOf="parent"
                                                             android:layout_marginEnd="8dp"
                                                             android:layout_marginRight="8dp"
                                                             app:layout_constraintStart_toEndOf="@+id/divider13"
                                                             android:layout_marginLeft="8dp"
                                                             android:layout_marginStart="8dp"
                                                             app:layout_constraintTop_toBottomOf="@+id/divider14"/>
    <View
            android:id="@+id/divider13"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteY="0dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.31"/>
    <com.google.android.material.button.MaterialButton

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/password_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#FFB300"
            android:text="@string/common_signin_button_text"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/password_edittext"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.196"
            android:id="@+id/account_signin_button"></com.google.android.material.button.MaterialButton
    >
</androidx.constraintlayout.widget.ConstraintLayout>
