<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <data>
        <variable
                name="viewmodel"
                type="com.iyoa.cleanaddis.viewModels.posting.PostViewModel"/>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="67dp" android:id="@+id/guideline"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="420dp" android:id="@+id/guideline2"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline3" app:layout_constraintGuide_end="253dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="563dp" android:id="@+id/guideline4"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" tools:src="@tools:sample/avatars"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
    />
    <TextView
            android:text="@{viewmodel.post.uuid}"
            android:id="@+id/textView_post_uuid"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
    />
    <TextView
            android:text="@{viewmodel.post.username}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView_username"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"/>
    <ImageView

            android:layout_width="0dp"
            android:layout_height="0dp"


            android:id="@+id/imageView_posted_image"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:srcCompat="@drawable/ic_allabouttrash"/>
    <ImageButton
            android:src="@android:drawable/ic_lock_lock"
            android:onClick="@{()->viewmodel.updateLike()}"
            android:layout_width="86dp"
            android:layout_height="0dp"
            android:id="@+id/imageButton_like_post" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3" app:layout_constraintVertical_bias="0.0"
            style="@android:style/Widget.Holo.Light.ImageButton"/>
    <ImageButton
            android:src="@android:drawable/stat_sys_download_done"
            android:layout_width="89dp"
            android:layout_height="0dp"
            android:id="@+id/imageButton_download"
            app:layout_constraintTop_toTopOf="@+id/guideline2" app:layout_constraintStart_toEndOf="@+id/imageButton_like_post"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.966" android:layout_marginTop="8dp"
            style="@android:style/Widget.Holo.Light.ImageButton"/>
    <TextView
            android:text="@{String.valueOf(viewmodel.post.noLike)}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_liked_by" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline3" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@{String.valueOf(viewmodel.post.noView)}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_post_description" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_liked_by"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/recyclerView_comment_list"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="665dp" android:id="@+id/guideline5"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/editText_comment" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline5" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_comment" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_comment"
            android:onClick="@{()->viewmodel.insertCommentForPost()}"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/guideline5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="1.0"
            style="@android:style/Widget.Holo.Light.ImageButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>